<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.MenuFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/id_menu_img"/>

    <TextView
        android:id="@+id/id_menu_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.9"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:text="BINGO"
        android:fontFamily="@font/coiny"
        android:gravity="center"
        android:textSize="105sp"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/id_menu_tv2"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:textSize="35sp"
        android:textStyle="italic"
        android:text="try your luck!"
        android:textColor="@color/white"
        android:fontFamily="@font/coiny"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_menu_tv_title"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/id_menu_button_play"
        android:layout_width="0dp"
        android:layout_height="0dp"
        style="@style/ButtonMenuStyle"
        android:text="PLAY"
        android:textColor="@color/white"
        android:fontFamily="@font/coiny"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@id/id_menu_button_settings"
        app:layout_constraintWidth_percent="0.75"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_menu_tv2"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/id_menu_button_settings"
        android:layout_width="0dp"
        android:layout_height="0dp"
        style="@style/ButtonMenuStyle"
        android:text="SETTINGS"
        android:textColor="@color/white"
        android:fontFamily="@font/coiny"
        android:textSize="45sp"
        app:layout_constraintWidth_percent="0.75"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/id_menu_button_quit"
        app:layout_constraintTop_toBottomOf="@id/id_menu_button_play"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="0dp"
        android:id="@+id/id_menu_button_quit"
        android:layout_height="0dp"
        android:text="qiut"
        android:elevation="20dp"
        android:fontFamily="@font/coiny"
        android:textColor="@color/white"
        android:textSize="35sp"
        style="@style/ButtonMenuStyle"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintHeight_percent="0.1"/>

</androidx.constraintlayout.widget.ConstraintLayout>